<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customBlueBlack"
    tools:context="dev.blank.sketchme.ui.upload.UploadActivity">


    <xyz.schwaab.avvylib.AvatarView
        android:id="@+id/avatarView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/customBlueBlack"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_upload"
        app:avvy_border_highlight_color="#C5CAE9"
        app:avvy_border_highlight_color_end="#B2EBF2"
        app:avvy_border_thickness="0dp"
        app:avvy_border_thickness_highlight="5dp"
        app:avvy_distance_to_border="70dp"
        app:avvy_highlighted="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOrder"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/order"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/avatarView"
        app:layout_constraintStart_toStartOf="@+id/avatarView"
        app:layout_constraintTop_toBottomOf="@+id/avatarView" />


</androidx.constraintlayout.widget.ConstraintLayout>